    "vue-loader": "^16.0.0-beta.3",
    "vue-router": "^4.0.0-alpha.12"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.10.4",
    "@razors/build-rollup": "^0.0.12",
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.4",
    "@vue/compiler-sfc": "^3.0.0-beta.21",
    "babel-loader": "^8.1.0",
    "commitizen": "^4.1.2",
    "css-loader": "^3.6.0",
    "cz-conventional-changelog": "^3.2.0",
    "html-webpack-plugin": "^4.3.0",
    "jest": "^26.1.0",
    "lerna": "^3.14.1",
    "less-loader": "^6.2.0",
    "npm-run-all": "^4.1.5",
    "rollup-plugin-vue": "^6.0.0-beta.6",
    "style-loader": "^1.2.1",
    "ts-jest": "^26.1.1",
    "ts-loader": "^8.0.0",
    "typescript": "^3.9.7",
    "vue-tsx-support": "^3.0.0-preview.1",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.0.9"
  },
  "resolutions": {
    "rollup-plugin-vue": "^6.0.0-beta.6"
